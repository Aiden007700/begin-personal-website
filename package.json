{
  "name": "begin-app",
  "version": "0.0.0",
  "description": "Basic Begin personal website",
  "proxy": "http://localhost:3333",
  "dependencies": {
    "@architect/sandbox": "^3.1.3",
    "@begin/data": "^1.2.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "3.4.4",
    "tap-spec": "^5.0.0",
    "tape": "^5.1.1",
    "tiny-json-http": "^7.2.2",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "start": "tsc && run-p start:react api",
    "start:react": "tsc && react-scripts start",
    "build": "tsc && react-scripts build",
    "test:i": "tsc && react-scripts test",
    "eject": "react-scripts eject",
    "api": "cross-env NODE_ENV=testing ARC_LOCAL=1 npx sandbox",
    "test": "tsc && cross-env NODE_ENV=testing PORT=6666 tape test/**/*-test.js test/*-test.js | tap-spec",
    "serve": "tsc && run-s build api"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@architect/sandbox": "^3.3.5",
    "@begin/data": "^1.2.3",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "tap-spec": "^5.0.0",
    "tape": "^5.1.1",
    "tiny-json-http": "^7.3.0"
  }
}
